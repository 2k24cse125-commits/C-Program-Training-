1.SUM OF ARRAY:

#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int n;
    int a[100];
    scanf("%d",&n);
    int sum=0;
    for(int i=0;i<n;i++){
        scanf("%d",&a[i]);
        sum=sum+a[i];
    }
    printf("%d",sum);
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}

2.Sum Based on Even/Odd Elements and Indexes:

#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int n,i;
    int arr[100];
    int even=0,odd=0;
    int evens=0,odds=0;
    scanf("%d",&n);
    for(i=0;i<n;i++){
        scanf("%d",&arr[i]);
        if(arr[i]%2==0)
            even+=arr[i];
        else
            odd+=arr[i];
        if(i%2==0)
            evens+=arr[i];
        else
            odds+=arr[i];
         }
    printf("%d %d %d %d",even,odd,evens,odds);
        
    return 0;
}
